{
  "manifest_version": 2,
  "name": "Always-On Extension",
  "version": "1.1",
  "description": "Runs on all websites automatically.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "<all_urls>"
  ]
}
